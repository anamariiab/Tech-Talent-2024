
public class T4Ejercicio03App {

	public static void main(String[] args) {
		// Declara dos variables X e Y de tipo int, dos variables N y M de tipo double
		int X;
		int Y;
		double N;
		double M;

		// Asigna a cada una un valor
		X = 10;
		Y = 20;
		N = 3.5;
		M = 4.5;

		System.out.println("X" + X);
		System.out.println("Y" + Y);
		System.out.println("N" + N);
		System.out.println("M" + M);

		// La suma de X + Y
		int suma = X + Y;

		System.out.println(suma);

		// La diferencia de X - Y
		int resta = X - Y;

		System.out.println(resta);

		// El producto de X * Y
		int multiplicacion = X * Y;

		System.out.println(multiplicacion);

		// El cociente de X / Y
		int division = X / Y;

		System.out.println(division);

		// El resto de X % Y
		int modulo = X % Y;

		System.out.println(modulo);

		// La suma de N + M
		double suma2 = N + M;

		System.out.println(suma2);

		// La diferencia de N - M
		double resta2 = N - M;

		System.out.println(resta2);

		// El producto de N * M
		double multiplicacion2 = N * M;

		System.out.println(multiplicacion2);

		// El cociente de N / M
		double division2 = N / M;

		System.out.println(division2);

		// El resto de N % M
		double modulo2 = N % M;

		System.out.println(modulo2);

		// La suma de X + N
		double suma3 = X + N;

		System.out.println(suma3);

		// El cociente de Y / M
		double division3 = Y / M;

		System.out.println(division3);

		// El resto de Y / M
		double modulo3 = Y % M;

		System.out.println(modulo3);

	}

}
